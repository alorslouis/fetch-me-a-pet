---
import Layout from "../layouts/Layout.astro";
import DogTable from "@components/astro/DogTable.astro";
import FavoriteDisplay from "@components/astro/FavoriteDisplay.astro";
import MatchesDisplay from "@components/astro/matches/MatchesDisplay.astro";
import ViewedDisplay from "@components/astro/viewed/ViewedDisplay.astro";
import { actions } from "astro:actions";
---

<Layout title="home" isHTMX={true}>
	<div
		class="grid grid-cols-1 lg:grid-cols-3 container mx-2 md:mx-auto gap-6"
	>
		<div class="flex flex-col gap-2">
			<FavoriteDisplay />
			<MatchesDisplay />
			<ViewedDisplay />
		</div>
		<div class="flex flex-col gap-2 lg:col-span-2">
			<DogTable />
		</div>
	</div>
</Layout>
